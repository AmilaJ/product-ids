<web-app>

    <servlet>
        <servlet-name>AuthenticationEndpoint</servlet-name>
        <servlet-class>com.wso2telco.identity.application.authentication.endpoint.AuthenticationEndpoint</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OAuth2Login</servlet-name>
        <servlet-class>com.wso2telco.identity.application.authentication.endpoint.oauth2.OAuth2Login</servlet-class>
        <!--  Custom Page configurations -->

        <!-- *************** LoginPage configs for SampleApp ********************** -->
